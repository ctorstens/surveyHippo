<% if @message %>
  <div class='container'>
    <div class='content'>
      <h1> <%= @message %><h1>
      <h1><%= @survey.name %></h1>
      <h2>Questions:</h2>
      <% @survey.questions.each do |question| %>
        <p><%= question.text %></p>
        <p>You answered: <%= question.responses.find_by_user_id(current_user.id).choice.text %><p><br>
      <% end %> 
    </div>
  </div>
<%else%>
  <div class='container'>
     <div class='content'>
        <h1><%= @survey.name %></h1>
        <form action="/survey/<%=@survey.id%>/submit" method="post">
          <h2>Questions:</h2>
          <% @survey.questions.each do |question| %>
            <p><%= question.text %></p>
              <% question.choices.each do |choice| %>
              <ul>
                <li><input type="radio" name="<%= question.id %>" value="<%= choice.id %>"><%= choice.text %></li>
                </ul>
              <% end %>
          <% end %>
          <input type="submit" value="submit">
        </form>
      </div>
  </div>
<%end%>
